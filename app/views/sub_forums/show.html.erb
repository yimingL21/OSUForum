<h1>Sub Forums</h1>
<h3>sub_forums show page</h3>

<h2>Posts</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User_Name</th>
      <th>Created_Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_forum.posts.each do |post| %>
      <tr>
        <td><%= link_to post.title post%></td>
        <td><%= link_to post.user.name post.user%></td>
        <td><%= post.create_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_sub_forum_post_path(@sub_forum) %>
