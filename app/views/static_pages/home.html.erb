<h1>OSU Forum</h1>
<p>Find me in app/views/static_pages/home.html.erb</p>
<p>This is the home of OSU Forum</p>
<%= @sub_forums.each do |sub_forum| %>
    <div>
        <table>
            <th><%= link_to sub_forum.name, sub_forum %></th>
            <%# <th><%= link_to sub_forum.name, sub_forum_posts_path(sub_forum) %></th>
            <tbody>
                <%= sub_forum.posts do |post| %>
                    <tr><%= link_to post.title, post %></tr>
                <% end %>
            </tbody>
        </table>
    </div>
<% end %>
