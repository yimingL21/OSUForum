<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Titile</th>
      <th>author_id</th>
      <th>create_time</th>
      <th>Content</th>
      <th>Sub forum</th>
      <th>comment_Ids</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.titile %></td>
        <td><%= post.author_id %></td>
        <td><%= post.create_time %></td>
        <td><%= post.content %></td>
        <td><%= post.sub_forum_id %></td>
        <td><%= post.comment_Ids %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
